pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = 'github-creds'   // Jenkins credential ID
        REPO_URL = 'https://github.com/LewisMagangi/alx-backend-python.git'
        PYTHON_ENV = "${WORKSPACE}/venv"
    }

    stages {
        stage('Checkout Source') {
            steps {
                echo 'üì• Checking out source code...'
                git branch: 'master',
                    url: "${REPO_URL}",
                    credentialsId: "${GITHUB_CREDENTIALS}"
            }
        }

        stage('Set Up Python Environment') {
            steps {
                echo 'üêç Setting up a Python virtual environment...'
                // Use bash explicitly to avoid 'source: not found'
                sh '''#!/bin/bash
                    set -e  # Exit on error
                    python3 -m venv venv
                    source venv/bin/activate
                    python -m pip install --upgrade pip
                    pip install -r messaging_app/requirements.txt
                    pip install pytest
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'üß™ Running pytest...'
                sh '''#!/bin/bash
                    set -e
                    source venv/bin/activate
                    pytest --junitxml=report.xml
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build and tests completed successfully!'
        }
        failure {
            echo '‚ùå Build or tests failed. Check the test report.'
        }
    }
}
